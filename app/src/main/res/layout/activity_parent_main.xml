<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ParentMainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/gl_sidebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.58" />

    <Button
        android:id="@+id/food_config_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Add Food"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/daily_button"/>

    <Button
        android:id="@+id/daily_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Daily"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintLeft_toRightOf="@id/food_config_button"
        app:layout_constraintRight_toLeftOf="@id/weekly_button"/>

    <Button
        android:id="@+id/weekly_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Weekly"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintLeft_toRightOf="@id/daily_button"
        app:layout_constraintRight_toLeftOf="@id/monthly_button"/>

    <Button
        android:id="@+id/monthly_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Monthly"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintLeft_toRightOf="@id/weekly_button"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/parent_options">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/weekly_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" />


    <FrameLayout
        android:id="@+id/sidebar_container"
        android:layout_width="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/weekly_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gl_sidebar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp" />


</android.support.constraint.ConstraintLayout>