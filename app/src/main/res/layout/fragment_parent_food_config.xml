<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="45dp"
    tools:context=".ParentMainActivity$PlaceholderFragment">


    <android.support.constraint.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.61" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.09" />


    <ImageView
        android:id="@+id/iv_button_fruit_minus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_minus_icon"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/iv_fruit"
        app:layout_constraintTop_toBottomOf="@id/et_add_child"
        app:layout_constraintBottom_toTopOf="@id/iv_button_veggie_minus"/>

    <ImageView
        android:id="@+id/iv_fruit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/fruit_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_button_fruit_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_fruit_plus"
        app:layout_constraintTop_toBottomOf="@id/et_add_child"
        app:layout_constraintBottom_toTopOf="@id/iv_veggie"/>

    <ImageView
        android:id="@+id/iv_fruit_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/fruit_apple"
        app:layout_constraintLeft_toRightOf="@id/iv_button_fruit_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_fruit_plus"
        app:layout_constraintTop_toBottomOf="@id/et_add_child"
        app:layout_constraintBottom_toTopOf="@id/iv_veggie"/>


    <TextView
        android:id="@+id/tv_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="26dp"
        android:padding="2dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#aa000000"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/iv_button_fruit_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_fruit_plus"
        app:layout_constraintTop_toBottomOf="@id/et_add_child"
        app:layout_constraintBottom_toTopOf="@id/iv_veggie"/>

    <ImageView
        android:id="@+id/iv_button_fruit_plus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_plus_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_fruit"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/et_add_child"
        app:layout_constraintBottom_toTopOf="@id/iv_button_veggie_plus"/>



    <ImageView
        android:id="@+id/iv_button_veggie_minus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_minus_icon"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/iv_veggie"
        app:layout_constraintTop_toBottomOf="@id/iv_button_fruit_minus"
        app:layout_constraintBottom_toTopOf="@id/iv_button_carb_minus"/>

    <ImageView
    android:id="@+id/iv_veggie"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/veggie_icon"
    app:layout_constraintLeft_toRightOf="@id/iv_button_veggie_minus"
    app:layout_constraintRight_toLeftOf="@id/iv_button_veggie_plus"
    app:layout_constraintTop_toBottomOf="@id/iv_fruit"
    app:layout_constraintBottom_toTopOf="@id/iv_carb"/>

    <ImageView
        android:id="@+id/iv_veggie_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/veggie_corn"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toRightOf="@id/iv_button_veggie_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_veggie_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_fruit"
        app:layout_constraintBottom_toTopOf="@id/iv_carb"/>

    <TextView
        android:id="@+id/tv_veggie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="26dp"
        android:padding="2dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#aa000000"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/iv_button_veggie_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_veggie_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_fruit"
        app:layout_constraintBottom_toTopOf="@id/iv_carb"/>

    <ImageView
        android:id="@+id/iv_button_veggie_plus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_plus_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_veggie"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/iv_button_fruit_plus"
        app:layout_constraintBottom_toTopOf="@id/iv_button_carb_plus"/>
    <ImageView
        android:id="@+id/iv_button_carb_minus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_minus_icon"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/iv_carb"
        app:layout_constraintTop_toBottomOf="@id/iv_button_veggie_minus"
        app:layout_constraintBottom_toTopOf="@id/iv_button_protein_minus"/>

    <ImageView
        android:id="@+id/iv_carb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/carbs_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_button_carb_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_carb_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_veggie"
        app:layout_constraintBottom_toTopOf="@id/iv_protein"/>

    <ImageView
        android:id="@+id/iv_carb_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:src="@drawable/treats_cake"
        app:layout_constraintLeft_toRightOf="@id/iv_button_carb_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_carb_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_veggie"
        app:layout_constraintBottom_toTopOf="@id/iv_protein"/>

    <TextView
        android:id="@+id/tv_carb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="26dp"
        android:padding="2dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#aa000000"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/iv_button_carb_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_carb_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_veggie"
        app:layout_constraintBottom_toTopOf="@id/iv_protein"/>

    <ImageView
        android:id="@+id/iv_button_carb_plus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_plus_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_carb"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/iv_button_veggie_plus"
        app:layout_constraintBottom_toTopOf="@id/iv_button_protein_plus"/>

    <ImageView
        android:id="@+id/iv_button_protein_minus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_minus_icon"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/iv_protein"
        app:layout_constraintTop_toBottomOf="@id/iv_button_carb_minus"
        app:layout_constraintBottom_toTopOf="@id/iv_button_dairy_minus"/>

    <ImageView
        android:id="@+id/iv_protein"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/protein_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_button_protein_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_protein_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_carb"
        app:layout_constraintBottom_toTopOf="@id/iv_dairy"/>


    <ImageView
        android:id="@+id/iv_protein_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/treats_donut"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toRightOf="@id/iv_button_protein_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_protein_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_carb"
        app:layout_constraintBottom_toTopOf="@id/iv_dairy"/>

    <TextView
        android:id="@+id/tv_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="26dp"
        android:padding="2dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#aa000000"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/iv_button_protein_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_protein_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_carb"
        app:layout_constraintBottom_toTopOf="@id/iv_dairy"/>

    <ImageView
        android:id="@+id/iv_button_protein_plus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_plus_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_protein"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/iv_button_carb_plus"
        app:layout_constraintBottom_toTopOf="@id/iv_button_dairy_plus"/>

    <ImageView
        android:id="@+id/iv_button_dairy_minus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_minus_icon"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/iv_dairy"
        app:layout_constraintTop_toBottomOf="@id/iv_button_protein_minus"
        app:layout_constraintBottom_toTopOf="@id/iv_button_treat_minus"/>

    <ImageView
        android:id="@+id/iv_dairy"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/dairy_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_button_dairy_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_dairy_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_protein"
        app:layout_constraintBottom_toTopOf="@id/iv_treat"/>

    <ImageView
        android:id="@+id/iv_dairy_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/treats_icecream_van"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toRightOf="@id/iv_button_dairy_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_dairy_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_protein"
        app:layout_constraintBottom_toTopOf="@id/iv_treat"/>

    <TextView
        android:id="@+id/tv_dairy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="26dp"
        android:padding="2dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#aa000000"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/iv_button_dairy_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_dairy_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_protein"
        app:layout_constraintBottom_toTopOf="@id/iv_treat"/>

    <ImageView
        android:id="@+id/iv_button_dairy_plus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_plus_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_dairy"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/iv_button_protein_plus"
        app:layout_constraintBottom_toTopOf="@id/iv_button_treat_plus"/>

    <ImageView
        android:id="@+id/iv_button_treat_minus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_minus_icon"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/iv_treat"
        app:layout_constraintTop_toBottomOf="@id/iv_button_dairy_minus"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_treat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/treat_icon_square"
        app:layout_constraintLeft_toRightOf="@id/iv_button_treat_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_treat_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_dairy"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_treat_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:src="@drawable/temp_unhealthy_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_button_treat_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_treat_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_dairy"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_treat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="26dp"
        android:padding="2dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#aa000000"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/iv_button_treat_minus"
        app:layout_constraintRight_toLeftOf="@id/iv_button_treat_plus"
        app:layout_constraintTop_toBottomOf="@id/iv_dairy"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_button_treat_plus"
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/food_plus_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_treat"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/iv_button_dairy_plus"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_food_config_title"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Food"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/spinner_meal_type_food_config"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_food_config_title"
        app:layout_constraintLeft_toRightOf="@id/gl_right"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/spinner_child_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_food_config_title"
        app:layout_constraintLeft_toRightOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/gl_right" />


    <EditText
        android:id="@+id/et_add_child"
        android:layout_width="0dp"
        android:hint="Enter Child's Name"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/spinner_child_select"
        app:layout_constraintLeft_toRightOf="@id/gl_left"
        app:layout_constraintRight_toLeftOf="@id/gl_right" />

    <Button
        android:id="@+id/button_add_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/spinner_child_select"
        app:layout_constraintLeft_toRightOf="@id/gl_right" />

</android.support.constraint.ConstraintLayout>